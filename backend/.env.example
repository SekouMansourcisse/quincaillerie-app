# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# Option 1: Utiliser Supabase (RECOMMANDÉ)
# Décommentez la ligne suivante et ajoutez votre chaîne de connexion Supabase
# DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.xxxxxxxxxxxxx.supabase.co:5432/postgres

# Option 2: PostgreSQL local (si vous n'utilisez pas Supabase)
# Décommentez les lignes suivantes si vous utilisez PostgreSQL en local
DB_HOST=localhost
DB_PORT=5432
DB_NAME=quincaillerie_db
DB_USER=postgres
DB_PASSWORD=your_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRE=7d

# CORS
CORS_ORIGIN=http://localhost:3000
